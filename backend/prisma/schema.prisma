// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  fullName      String
  email         String         @unique
  passwordHash  String
  phoneNumber   String?
  creditScores  CreditScore[]
  transactions  Transaction[]
  creditReports CreditReport[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([email], name: "user_email_idx")
}

model CreditScore {
  id          Int       @id @default(autoincrement())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  score       Int
  factors     Json      // Stores scoring factors as JSON
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId], name: "creditscore_user_idx")
  @@index([createdAt], name: "creditscore_created_at_idx")
}

model Transaction {
  id              Int       @id @default(autoincrement())
  userId          Int
  user            User      @relation(fields: [userId], references: [id])
  amount          Float
  type            String    // e.g., 'INCOME', 'EXPENSE', 'PAYMENT', 'TRANSFER'
  category        String    // e.g., 'SALARY', 'RENT', 'UTILITIES', 'LOAN_PAYMENT'
  description     String?
  transactionDate DateTime
  status          String    // e.g., 'PENDING', 'COMPLETED', 'FAILED', 'CANCELLED'
  metadata        Json?     // Additional transaction data
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId], name: "transaction_user_idx")
  @@index([transactionDate], name: "transaction_date_idx")
  @@index([type], name: "transaction_type_idx")
  @@index([category], name: "transaction_category_idx")
}

model CreditReport {
  id              Int       @id @default(autoincrement())
  userId          Int
  user            User      @relation(fields: [userId], references: [id])
  score           Int
  scoreDate       DateTime
  factors         Json      // Detailed scoring factors
  paymentHistory  Json      // Payment history analysis
  creditUtilization Json    // Credit utilization details
  creditAge       Json      // Credit age analysis
  creditMix       Json      // Credit mix analysis
  newCredit       Json      // New credit analysis
  reportDate      DateTime  @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId], name: "creditreport_user_idx")
  @@index([reportDate], name: "creditreport_date_idx")
}

// Enums for better type safety
enum TransactionType {
  INCOME
  EXPENSE
  PAYMENT
  TRANSFER
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

enum TransactionCategory {
  // Income Categories
  SALARY
  BONUS
  INVESTMENT
  OTHER_INCOME
  
  // Expense Categories
  RENT
  UTILITIES
  GROCERIES
  DINING
  TRANSPORTATION
  ENTERTAINMENT
  SHOPPING
  HEALTHCARE
  EDUCATION
  TRAVEL
  
  // Credit Related
  LOAN_PAYMENT
  CREDIT_CARD_PAYMENT
  INTEREST
  FEE
  
  // Other
  TRANSFER_IN
  TRANSFER_OUT
  OTHER
}
